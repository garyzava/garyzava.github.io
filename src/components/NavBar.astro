---
import ThemeToggle from './ThemeToggle.astro';
---
<!--
  The top navigation bar.  This component contains links to each section of
  the single‑page site and a dark/light mode toggle.  The nav is sticky at
  the top of the viewport and uses backdrop blur for a glassy effect.
-->
<nav class="sticky top-0 z-50 backdrop-blur bg-white/70 dark:bg-gray-900/70 border-b border-gray-200 dark:border-gray-800">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-4 sm:px-6 lg:px-8 h-16">
    <div class="flex items-center">
      <a href="#hero" class="text-lg font-semibold tracking-tight text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">Gary Zavaleta</a>
    </div>
    <div class="hidden md:flex space-x-6">
      <a href="#about" class="text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-indigo-600 dark:hover:text-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">About</a>
      <a href="#projects" class="text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-indigo-600 dark:hover:text-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">Projects</a>
      <a href="#publications" class="text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-indigo-600 dark:hover:text-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">Publications</a>
      <a href="#contact" class="text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-indigo-600 dark:hover:text-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">Contact</a>
      <a href="https://github.com/garyzava" target="_blank" rel="noopener" class="text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-indigo-600 dark:hover:text-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">GitHub</a>
    </div>
    <div class="flex items-center space-x-4">
      <ThemeToggle />
    </div>
  </div>
</nav>