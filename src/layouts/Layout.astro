---
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';

const { title, description } = Astro.props as { title?: string; description?: string };
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? `${title} | Gary Zavaleta` : 'Gary Zavaleta'}</title>
    <meta name="description" content={description ?? 'Sr Director of Analytics & Data Science at Global Hotel Alliance; passion for GenAI, NLP and modern data platforms.'} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title ? `${title} | Gary Zavaleta` : 'Gary Zavaleta'} />
    <meta property="og:description" content={description ?? 'Sr Director of Analytics & Data Science at Global Hotel Alliance; passion for GenAI, NLP and modern data platforms.'} />
    <meta property="og:image" content="/assets/og-banner.svg" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title ? `${title} | Gary Zavaleta` : 'Gary Zavaleta'} />
    <meta property="twitter:description" content={description ?? 'Sr Director of Analytics & Data Science at Global Hotel Alliance; passion for GenAI, NLP and modern data platforms.'} />
    <meta property="twitter:image" content="/assets/og-banner.svg" />
    <!-- Load Inter font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="font-sans antialiased bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100">
    <NavBar />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>